# Bot 2: Heartbeat Monitor - Environment Variables
# BTC Trading Bot v5.0
# Copy this file to .env and fill in your values

# ====================
# Database (same as Bot 1)
# ====================
USE_SQLITE=true
SQLITE_PATH=../bot-core-brain/data/trading_bot.db

# Or PostgreSQL for production
# DATABASE_URL=postgresql://btc_bot:secure_password@localhost:5432/btc_trading_bot

# ====================
# Telegram
# ====================
BOT_2_TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ENABLED=true

# ====================
# Binance (for price fetching)
# ====================
BINANCE_TESTNET=true

# ====================
# Monitoring Settings
# ====================
HEALTH_CHECK_INTERVAL=60
SIGNAL_CHECK_INTERVAL=30

