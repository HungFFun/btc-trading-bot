# Bot 1: Core Brain - Environment Variables
# BTC Trading Bot v5.0
# Copy this file to .env and fill in your values

# ====================
# Binance API
# ====================
BINANCE_API_KEY=your_api_key
BINANCE_API_SECRET=your_api_secret
BINANCE_TESTNET=true

# ====================
# On-chain Data (Optional)
# ====================
GLASSNODE_API_KEY=your_glassnode_key
COINGLASS_API_KEY=your_coinglass_key

# ====================
# Database
# ====================
# Use SQLite for simple setup
USE_SQLITE=true
SQLITE_PATH=data/trading_bot.db

# Or PostgreSQL for production
# DATABASE_URL=postgresql://btc_bot:secure_password@localhost:5432/btc_trading_bot

# ====================
# Telegram
# ====================
BOT_1_TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ENABLED=true

# ====================
# Trading Parameters (FIXED in v5.0)
# ====================
SYMBOL=BTCUSDT
POSITION_MARGIN=150
LEVERAGE=20
TP_PERCENT=0.005
SL_PERCENT=0.0025
DAILY_TARGET=10
DAILY_STOP=-15
MAX_TRADES=3

